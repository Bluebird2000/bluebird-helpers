{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "ESNext",  // Change this from "CommonJS" to "ESNext"
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
